/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/reaptec -profile test,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = 6.GB
    max_time   = 6.h

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input  = './data/samplesheet_test.csv'
    barcodes = '/storage/home/rbonnal/projects/ReapTEC_PaganiLab/TestFiles/filtered_feature_bc_matrix/barcodes.tsv.gz'

    // Genome references
    genome = 'GRCh38'
}

process {

    withName: 'GET_WHITELIST' {
        container = '/storage/data/MAP/hpcapps/opt/bioinformatics/map/wf/nf-core-reaptec/nf-core-reaptec_t0-0-1.sif'
    }
    
    withName: 'UMITOOLS_EXTRACT' {
    	container = '/storage/data/MAP/hpcapps/opt/bioinformatics/map/wf/nf-core-reaptec/nf-core-reaptec_t0-0-1.sif'
    }

    withName: 'CUTADAPT' {
    	container = '/storage/data/MAP/hpcapps/opt/bioinformatics/map/wf/nf-core-reaptec/nf-core-reaptec_t0-0-1.sif'
    }

}